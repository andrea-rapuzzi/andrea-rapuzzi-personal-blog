---
import Navigation from "./Navigation.astro";
---
<header>
    <nav>
        <Navigation />
    </nav>
</header>

<style>
    header {
    display: flex;
        flex-direction: row;
        justify-content: flex-end;
        align-items: center;
    height: 4rem;
    padding: 0 2rem;
    position: sticky;
    top: -1px;
    background-color: var(--neutral-50);
    opacity: 0.8;
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(6px);
}


@media only screen and (min-width: 1024px) {
  /* Styles for desktop devices go here */
    header {
			padding: 0 10rem;
}
}

</style>


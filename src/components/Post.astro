---
const { title, url, pubDate } = Astro.props;
---

<li><span>{pubDate.slice(0, 7)}</span><a href={url}>{title}</a></li>

<style>
    li {
        list-style: none;
    }
    span {
        color: var(--neutral-100);
        font-size: var(--pt-long-primer);
        opacity: 0.6;
        font-weight: 100;
        font-family: monospace;
        
    }

    span::after {
        content: " ";
    }

    a {
        font-size: var(--pt-small-pica);
        text-overflow: ellipsis;
    }
</style>
